         <font>
            <Font name="Arial" size="32.0" />
         </font>
      </Text>
      <Button layoutX="476.0" layoutY="272.0" mnemonicParsing="false" onAction="#submitAddService" text="Submit" />
      <Button layoutX="381.0" layoutY="272.0" mnemonicParsing="false" onAction="#returnToServiceOptions" text="Return" />
      <Label fx:id="statuslabel" layoutX="437.0" layoutY="312.0" text="Status" textFill="#e90000">
